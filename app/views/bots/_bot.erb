<div class="card flex cursor-pointer border-2 px-4 w-full sm:w-fit items-end" data-id="<%= bot.id %>" data-name="<%= bot.name %>"
     data-controller="botselect" data-action="click->botselect#select">
  <%= image_tag bot.image_url, class: "w-28 h-28 object-fit" %>
  <div class="flex flex-col gap-1 p-4">
    <div class="text-gray-800 font-bold"><%= bot.name %></div>
    <div class="text-sm text-gray-700"><%= bot.description %></div>
  </div>
</div>
