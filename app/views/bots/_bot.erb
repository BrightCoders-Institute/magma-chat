<div class="card flex cursor-pointer border-4 px-4 w-full sm:w-fit items-end relative"
     data-id="<%= bot.id %>" data-name="<%= bot.name %>"
     data-controller="botselect" data-action="click->botselect#select">
  <div class="max-w-[100px]">
    <%= image_tag bot.image_url, class: "object-fit" %>
  </div>
  <div class="flex flex-col gap-1 p-4 h-full">
    <div class="text-gray-800 font-bold">
      <%= bot.name %>
    </div>
    <div class="text-sm text-gray-700"><%= bot.intro %></div>
  </div>
</div>
