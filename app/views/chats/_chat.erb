<%= link_to chat_path(chat), class: "chatnav flex items-start gap-0 w-full #{@chat == chat ? "active" : ""}" do %>
  <%= image_tag chat.bot.image_url, class: "w-10 h-8 object-cover -ml-3" %>
  <div class="flex flex-col flex-1 w-full">
    <div class="flex justify-stretch flex-1 max-h-[60px] md:max-h-[22px] text-ellipsis overflow-hidden break-all relative">
      <div class="w-full text-gray-400 text-sm hover:text-yellow-500"><%= chat.title.capitalize %></div>
      <div class="absolute inset-y-0 right-0 w-8 z-10 bg-gradient-to-l from-gray-900"></div>
    </div>
    <div class="text-gray-600 text-xs flex gap-2 items-center">
      <span>
        <%= chat.bot.name %>
        <%= distance_of_time_in_words_to_now(chat.created_at) %> ago</span>
      <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round"
           class="h-4 w-4 hover:text-red-500" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"
           data-reflex="click->Chat#destroy" data-id="<%= chat.id %>">
        <polyline points="3 6 5 6 21 6"></polyline>
        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
        <line x1="10" y1="11" x2="10" y2="17"></line>
        <line x1="14" y1="11" x2="14" y2="17"></line>
      </svg>
    </div>
  </div>
<% end %>
