<div class="grid sm:grid-cols-3 gap-4 p-4">
  <%= render Bot.default %>
  <%= render Bot.others %>
</div>

<% content_for :footer do %>
    <div class="w-full p-4">
      <%= form_with model: @chat do |f| %>
        <%= f.hidden_field :bot_id %>
        <%= f.hidden_field :engine, value: "gpt-3.5-turbo" %>
        <%= f.text_field :first_message, class: "w-full rounded-md bg-gray-700 text-white",
                                   data: {controller: "chat focus", action: "change->chat#submit"} %>
    <% end %>
  </div>

<% end %>
